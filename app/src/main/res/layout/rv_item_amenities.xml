<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/icon_rl"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/rl_round_bg">

        <ImageView
            android:id="@+id/amenities_icon_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/aminities_parking_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/amenities_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parking"
        android:layout_toRightOf="@id/icon_rl"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"/>
</RelativeLayout>